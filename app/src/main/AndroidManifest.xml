<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="teamjamin.ffs">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.appp.default.search"
                android:value=".SearchResultsActivity" />
        </activity>

        <activity android:name=".SearchResultsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:parentActivityName=".MainActivity">
            <intent-filter>
                <action android:name="android.app.searchable"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:value=".MainActivity"
                android:resource="@xml/searchable" />
        </activity>

        <activity android:name=".LoginActivity"
            android:theme="@style/AppTheme.Login"></activity>

        <activity android:name=".SignupActivity"
            android:theme="@style/AppTheme.Login"></activity>

        <activity
            android:name=".ChatActivity"
            android:label="@string/app_chat"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"
                android:label="Chat"/>
        </activity>

        <activity android:name=".CartActivity"
            android:label="CART"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"
                android:label="Cart"/>

        </activity>

        <activity android:name=".CategoryActivity"
            android:label="CATEGORY"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"
                android:label="Category"/>
        </activity>

        <activity android:name=".SellActivity"
            android:label="@string/app_sell"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.Login">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity"
                android:label="Sell"/>
        </activity>

        <activity android:name=".SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".ChatFunction"
            android:label="Chat"
            android:parentActivityName=".ChatActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ChatActivity" />
        </activity>
        <!-- ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>
</manifest>
